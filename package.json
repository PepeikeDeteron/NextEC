{
  "name": "next-ec",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "check-types": "tsc --noEmit",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "format": "prettier --write .",
    "test-all": "npx yarn-run-all lint check-types format lint:fix",
    "prepare": "husky install",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o build",
    "test": "jest",
    "storyshots": "jest --config ./jest.storyshots.config.js",
    "update-storyshots": "jest --config ./jest.storyshots.config.js --updateSnapshot"
  },
  "dependencies": {
    "@firebase/firestore-types": "^2.5.0",
    "@material-ui/core": "^4.12.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/system": "^4.12.1",
    "firebase-functions": "^3.15.5",
    "next": "11.1.2",
    "normalize.css": "^8.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "styled-components": "^5.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@react-theming/storybook-addon": "^1.1.1",
    "@reduxjs/toolkit": "^1.6.1",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-docs": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/addon-storyshots": "^6.3.8",
    "@storybook/react": "^6.3.8",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.10",
    "@types/react": "^17.0.19",
    "@types/storybook__addon-storyshots": "^5.3.1",
    "@types/styled-components": "^5.1.14",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-styled-components": "^1.13.2",
    "eslint": "^7.32.0",
    "eslint-config-next": "11.1.2",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-react": "^7.25.1",
    "firebase": "^9.0.2",
    "husky": "^7.0.2",
    "jest": "26.6.3",
    "jest-watch-typeahead": "^0.6.4",
    "lint-staged": "^11.1.2",
    "prettier": "2.3.2",
    "react-redux": "^7.2.5",
    "redux-logger": "^3.0.6",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.2"
  },
  "eslintIgnore": [
    "/jest.config.js",
    "/jest.storyshots.config.js",
    "/test/__mocks__/fileMock.js",
    "/test/__mocks__/styleMock.js",
    "/src/lib/firebase.js"
  ],
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn format",
      "yarn lint:fix"
    ]
  },
  "license": "UNLICENSED"
}
